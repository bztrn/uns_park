.content
  .row
    %h2
      - if user_can_edit
        %a.btn.btn-default.btn-sm.create_btn{:type => "button", 'data-toggle' => "modal", 'data-target' => "#newSpaces"}
          Create Spot...
      .title
        = 'Parked Domains'
  .row
    = render :partial => 'thumbnail', :collection => @spaces, :as => :s

- if user_can_edit && ( @ad_hoc_spaces.count > 0 )
  .content
    .row
      %h2
        .title
          = 'Unclaimed domains'
    .row#unclaimed_parking.top_content
      = render :partial => 'unclaimed_thumbnail', :collection => @ad_hoc_spaces, :as => :s

- if user_can_edit
  = content_for(:modal_dlog) do
    .modal.fade#newSpaces
      .modal-dialog
        .modal-content.std_modal
          = render :partial => 'uns_park/spaces/form', :locals => {:space => current_user.spaces.build}
