.core_thumbnail
  .thumbnail.content{:style => "background-color: #{s.background_color}"}
    %a.not_close{:type => "button", 'href' => "http://#{s.domain}"}
      .glyphicon.glyphicon-cloud
    = image_tag s.main_icon.url(:thumb), {:height => 100}
    .caption
      %h4
        = s.domain || s.name
      %p
        count:
        = s.count || 0
        %br
        updated:
        = s.updated_at.strftime("%B %d, %Y")
        %br
        subscribers:
        = s.subscribers.count
      - if user_can_edit
        %a{:type => "button", 'data-confirm' => "are you sure", 'href' => uns_park.space_path(s), 'data-method' => :delete }
          .glyphicon.glyphicon-trash
        %a{:type => "button", 'href' => uns_park.space_path(s) }
          .glyphicon.glyphicon-pencil
