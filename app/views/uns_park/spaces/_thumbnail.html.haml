.core_thumbnail
  .thumbnail.content{:style => "background-color: #{s.background_color}"}
    %a.btn.btn-xs.btn-default.not_close{:type => "button", 'href' => "http://#{s.domain}"}
      .glyphicon.glyphicon-cloud
    
    .logo
      = link_to(image_tag(s.main_icon.url(:thumb), {:height => 100}), uns_park.space_path(s))
    .caption
      %h4
        = s.domain || s.name
      %p
        count:
        = s.count || 0
        %br
        updated:
        = s.updated_at.strftime("%B %d, %Y")
        %br
        subscribers:
        = s.subscribers.count
    - if user_can_edit
      .action
        %a.btn.btn-xs.btn-default{:type => "button", 'data-confirm' => "are you sure", 'href' => uns_park.space_path(s), 'data-method' => :delete }
          .glyphicon.glyphicon-trash
        != case_select(s)
        != security_select(s)
